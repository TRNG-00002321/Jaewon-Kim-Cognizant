									"const genId = () => {\r",
									"    const currentDate = new Date();\r",
									"    return \"ORD-\" + \r",
									"           currentDate.getFullYear() + \r",
									"           (currentDate.getMonth() + 1).toString().padStart(2, '0') + \r",
									"           \"-\" + \r",
									"           Math.floor(Math.random() * (10000 - 0 + 1)).toString().padStart(4, '0');\r",
									"}\r",
									"\r",
									"const genISBN = () => {\r",
									"    const currentDate = new Date();\r",
									"    return \"978\" + \r",
									"           Math.floor(Math.random() * (10000000000 - 0 + 1)).toString().padStart(10, '0');\r",
									"}\r",
									"\r",
									"const genDatePastMonth = () => {\r",
									"    const now = new Date();\r",
									"    const thirtyDaysAgo = new Date(now.getTime() - (30 * 24 * 60 * 60 * 1000));\r",
									"    \r",
									"    const randomTime = thirtyDaysAgo.getTime() + \r",
									"                       Math.random() * (now.getTime() - thirtyDaysAgo.getTime());\r",
									"    \r",
									"    return new Date(randomTime);\r",
									"}\r",
									"\r",
									"const genDatePastYear = () => {\r",
									"    const now = new Date();\r",
									"    const oneYearAgo = new Date(now.getTime() - (365 * 24 * 60 * 60 * 1000));\r",
									"    \r",
									"    const randomTime = oneYearAgo.getTime() + \r",
									"                       Math.random() * (now.getTime() - thirtyDaysAgo.getTime());\r",
									"    \r",
									"    return new Date(randomTime);\r",
									"}\r",
									"\r",
									"const genDatePastYear = () => {\r",
									"    const now = new Date();\r",
									"    const oneYearFromNow = new Date(now.getTime() + (365 * 24 * 60 * 60 * 1000));\r",
									"    \r",
									"    return oneYearFromNow;\r",
									"}\r",
									"\r",
									"const getNextMonday = () => {\r",
									"    const today = new Date();\r",
									"    const dayOfWeek = today.getDay();\r",
									"    const daysUntilMonday = dayOfWeek === 0 ? 1 : (8 - dayOfWeek);\r",
									"    \r",
									"    const nextMonday = new Date(today);\r",
									"    nextMonday.setDate(today.getDate() + daysUntilMonday);\r",
									"    nextMonday.setHours(0, 0, 0, 0);\r",
									"    \r",
									"    return nextMonday;\r",
									"}\r",
